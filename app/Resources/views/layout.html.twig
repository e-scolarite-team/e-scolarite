<script src="{{ asset('js/custom.js') }}"></script>
<script>
function init(){
   refresh();
}

function refresh() {

$.ajax({
    url: "{{ path('notification-admin-barre-notif') }}", 
    success:
        function(retour){
         
        var dem=retour["demandes"];
        var rec=retour["reclamations"];
        var nbr=dem["id"].length+rec["id"].length;
        var str="";
        
    for(var j=0 ; j< dem["id"].length; j++){
      var id=dem["id"][j];
       str+="<li class='new'><a href='{{ path('notification-admin-to-demande', { 'id': "%s" }) | format('"+id+"') | raw}}'><span class='thumb'></span><span class='desc'><span class='name'> "+dem['nom'][j]+" "+dem['prenom'][j]+"<span class='badge badge-success'>new</span></span><span  class='msg'>a fait une demande ( "+dem['type'][j]+")<br>"+dem['createdAt'][j]+"</span></span></a></li>"; 
    }
    for(var j=0 ; j< rec["id"].length; j++){
      var id=rec["id"][j];
       str+="<li class='new'><a href='{{ path('notification-admin-to-reclamation', { 'id': "%s" }) | format('"+id+"') | raw}}'><span class='thumb'></span><span class='desc'><span class='name'> "+rec['nom'][j]+" "+rec['prenom'][j]+"<span class='badge badge-success'>new</span></span><span  class='msg'>a fait une réclamation ( "+rec['type'][j]+")<br>"+rec['createdAt'][j]+"</span></span></a></li>"; 
    }

    jQuery("#list").html(str);
    jQuery("#nbr_notif").append(jQuery("<span class='badge'>"+nbr+"</span>"));
   
    

    jQuery("#list").append(jQuery("<li class='new'><a href='{{path('notification-admin')}}'>Voir toutes les notifications</a></li>"));

     
    }

});
    
    setTimeout('refresh();',10000);

 }
refresh();
</script>

