{% extends '::layout.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block content %}
	<div class="panel panel-default">
        {{ form_start(form,{'attr' : {'class' : 'form-horizontal form-bordered', 'novalidate':'novalidate'}})}}
        <div class="panel-heading">
          <div class="panel-btns">
            <a href="#" class="panel-close">&times;</a>
            <a href="#" class="minimize">&minus;</a>
          </div>
          <h4 class="panel-title">L'envoie d'une reclamation</h4>
          <p>Cette interface permet d'envoyer une reclamation.</p>
        </div>

        <div class="panel-body panel-body-nopadding">
          
          
            {% if errors %}
            <div class="error" style="display:block;padding : 25px 50px;">
              {% for err in errors %}
              <label class="error">{{ err | raw }}</label>
              {% endfor %}
            </div>
            {% endif %}
            <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.objet.vars.id }}">Objet <span class="asterisk">*</span> :</label>
              <div class="col-sm-6">
                {{ form_widget(form.objet,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.typeReclamation.vars.id }}">Type<span class="asterisk">*</span> :</label>
              <div class="col-sm-6">
                {{ form_widget(form.typeReclamation,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.description.vars.id }}">Description <span class="asterisk">*</span> :</label>
              <div class="col-sm-6">
                {{ form_widget(form.description,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>
            {{ form_rest(form)}}
          	
          
        </div><!-- panel-body -->
        
      <div class="panel-footer">
			 <div class="row">
				<div class="col-sm-6 col-sm-offset-3">
				  <center><button type="submit" class="btn btn-primary">Envoyer</button></center>
				</div>
			 </div>
		  </div><!-- panel-footer -->
      {{ form_end(form)}}
      </div><!-- panel -->
{% endblock %}
