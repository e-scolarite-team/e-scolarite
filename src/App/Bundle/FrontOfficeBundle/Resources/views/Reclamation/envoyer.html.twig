{% extends '::frontend.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block pageTitle %}
    <i class="fa fa-home"></i>
    Reclamation

{% endblock %}

{% block breadcrumb %}
  <li><a href="{{ path('listerReclamationEtud') }}">Reclamation</a></li>
          <li class="active">Envoyer</li>

{% endblock %}

{% block mainMenu %}
<li class="nav-parent  active nav-active">
  <a href="#"><i class="fa fa-home"></i> <span>Reclamations</span></a>
  <ul class="children" style="display: block;">
    <li>
      <a href="{{ path('listerReclamationEtud') }}"><i class="fa fa-caret-right"></i>Liste des reclamations</a>
      <a href="{{ path('reclamationEtud') }}"><i class="fa fa-caret-right"></i>Envoyer une reclamation</a>
    </li>
  </ul>
</li>
<li class="nav-parent">
  <a href="#"><i class="fa fa-home"></i> <span>Demandes</span></a>
  <ul class="children">
    <li><a href="{{ path('rendezvous') }}"><i class="fa fa-caret-right"></i>Consulter les rendez-vous</a></li>
    <li><a href="{{ path('demandepiece') }}"><i class="fa fa-caret-right"></i>Demande une piece</a></li>
    <li><a href="{{ path('changer') }}"><i class="fa fa-caret-right"></i>Changement de Module</a></li>
  </ul>
</li>
{% endblock %}

{% block content %}
	<div class="panel panel-default">
        {{ form_start(form,{'attr' : {'class' : 'form-horizontal form-bordered', 'novalidate':'novalidate'}})}}
        <div class="panel-heading">
          <div class="panel-btns">
            <a href="#" class="panel-close">&times;</a>
            <a href="#" class="minimize">&minus;</a>
          </div>
          <h4 class="panel-title">L'envoie d'une reclamation</h4>
          <p>Cette interface permet d'envoyer une reclamation.</p>
        </div>

        <div class="panel-body panel-body-nopadding">
          
          
            {% if errors %}
            <div class="error" style="display:block;padding : 25px 50px;">
              {% for err in errors %}
              <label class="error">{{ err | raw }}</label>
              {% endfor %}
            </div>
            {% endif %}
            <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.objet.vars.id }}">Objet <span class="asterisk">*</span> :</label>
              <div class="col-sm-6">
                {{ form_widget(form.objet,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.typeReclamation.vars.id }}">Type<span class="asterisk">*</span> :</label>
              <div class="col-sm-6">
                {{ form_widget(form.typeReclamation,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.description.vars.id }}">Description <span class="asterisk">*</span> :</label>
              <div class="col-sm-6">
                {{ form_widget(form.description,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>
            {{ form_rest(form)}}
          	
          
        </div><!-- panel-body -->
        
      <div class="panel-footer">
			 <div class="row">
				<div class="col-sm-6 col-sm-offset-3">
				  <center><button type="submit" class="btn btn-primary">Envoyer</button></center>
				</div>
			 </div>
		  </div><!-- panel-footer -->
      {{ form_end(form)}}
      </div><!-- panel -->
{% endblock %}
