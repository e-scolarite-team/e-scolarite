    {% endif %}
  </ul>
</li>
{% endblock %}
{% block content %}
  
 <div class="row">
      
              <div class="col-md-6">
               <div class="panel panel-default">
                    <div class="panel-heading">
                         <h3>Status :</h3>
                    </div><!--heading-->
                    <h4 class="text-danger"><center> Impossible d'accorder le Module Libre une 2 ème fois  !!!</center></h4> 
                    <p>&nbsp; </p>
                    <p> &nbsp; </p>
                    <p><center>contactez l'administration pour plus d'explications</center> </p>
               
              </div><!---fin panel -->
           </div>
      
            <div class="col-md-6">
                 <div class="panel panel-default">
                      <div class="panel-heading">
                        <h3>Liste des demandes de module libre</h3>
                      </div><!--heading--->
                       <p></p>
                  <div class="tab-pane active" id="tab1">
                    <table class="table  table-hidaction table-hover" id="list-demande">
                      <thead>
                        <tr>
                           <th>Nom  &nbsp; etudiant</th>
                           <th>Type demande</th>
                           <th>Date de demande</th>
                           <th>Reponse</th>
                        
                       </tr>
                    </thead>
                    <tbody>
                     {% for dmd in DmdAccepOuRef %}

                        <tr class="odd gradeX">
                            <td>{{ dmd.etudiant.nom }}&nbsp;{{ dmd.etudiant.prenom}}</td>
                            <td>{{ dmd.typeDemande.libelle }}</td>
                            <td>{{ dmd.createdAt|date('d/m/Y') }}</td>
                                {% for etatdmd in dmd.etatDemandes %}
                                     <td>{{etatdmd.etat}} </td>
                                {% endfor%}
                        </tr>
                      {% endfor %}
                     </tbody>
                   </table>
                 </div>
                   


                    <div class="panel-footer"> 
                     <div class="row"> <div class="col-sm-9 col-sm-offset-3">  </div> 
                    </div> 
                    </div>
                     
                 </div><!-- fin panel -->
             </div>
 </div><!-- row --> 
  
{% endblock %}


