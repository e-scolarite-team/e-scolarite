{% extends "::layout.html.twig" %}

{% block title %} Admin{% endblock %}

{% block content %}
	<div class="panel panel-default">

        {{ form_start(form,{'attr' : {'class' : 'form-horizontal form-bordered', 'novalidate':'novalidate'}})}}
  
        <div class="panel-heading">
          <div class="panel-btns">
            <a href="#" class="panel-close">&times;</a>
            <a href="#" class="minimize">&minus;</a>
          </div>
          <h4 class="panel-title">Ajouter un nouveau administrateur</h4>

          <p>Cette interface permet de créer un nouveau administrateur </p>
          
        </div>

        <div class="panel-body panel-body-nopadding">
          
          {% if errors %}
            <div class="error" style="display:block;padding : 25px 50px;">
              {% for err in errors %}
              <label class="error">{{ err | raw }}</label>
              {% endfor %}
            </div>
            {% endif %}
       
           	<div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.nom.vars.id }}">Nom</label>
              <div class="col-sm-6">
                {{ form_widget(form.nom,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>

            <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.prenom.vars.id }}">Prénom</label>
              <div class="col-sm-6">
                {{ form_widget(form.prenom,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>

             <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.email.vars.id }}">Email</label>
              <div class="col-sm-6">
                {{ form_widget(form.email,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>

             <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.password.vars.id }}">Mot de passe</label>
              <div class="col-sm-6">
                {{ form_widget(form.password,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>

             <div class="form-group">
              <label class="col-sm-3 control-label" for="{{ form.expired.vars.id }}">Expire</label>
              <div class="col-sm-6">
                {{ form_widget(form.expired,{'attr' : {'class' : 'form-control'}})}}
              </div>
            </div>
        </div><!-- panel-body -->
        
      <div class="panel-footer">
			 <div class="row">
				<div class="col-sm-6 col-sm-offset-3">
				  <center><button type="submit" class="btn btn-primary">Ajouter</button></center>
				</div>
			 </div>
		  </div><!-- panel-footer -->
      {{ form_end(form)}}
      </div><!-- panel -->
{% endblock %}
