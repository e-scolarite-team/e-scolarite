{% block content %}
<div class="col-md-12">
          
          <div class="panel panel-default">
              <div class="panel-heading">
                <div class="panel-btns">
                  <a href="#" class="minimize">−</a>
                </div>
                <h4 class="panel-title">Liste des demandes Reçus</h4>
                {% if date != "none" and autoReponceAmount != 0  %}
               <form id="basicForm" action="{{ path( 'reponceAuto' ) }}" class="form-horizontal" novalidate="novalidate" method="POST">
                <div class="form-group">
                  <div class="col-sm-5">
                 <p>Vous pouvez traiter les demandes en cliquant sur le boutton Traiter!, ou vous pouvez fixez les {{autoReponceAmount}} premiere demandes dans cette date en cliquant sur le boutton Fixer</p>
                 </div>
                 <div class="col-sm-3">
                  <div class="input-group">

                <input type="text" class="form-control" placeholder="dd-mm-yy" rea id="datepicker" name="rv" value="{{date}}">

                <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
              </div>
                </div>
                  <div class="col-sm-2">
                      <button class="btn btn-primary" type="submit" name="fixer"  value="fixer" >Fixer</button>
                      
                  </div>
                </div>
                
                </form>
                {%  else %}
                <p>Vous pouvez traiter les demandes en cliquant sur le boutton Traiter!<p>
                {% endif %}
              </div>
              <div class="panel-body" >
          <div class="table-responsive">
          <table class="table  table-hidaction table-hover" id="list-type">
            <thead>
              <tr>
                <th>CNE</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Type de Pièce</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              {% for demande in demandes %}  
                    <tr>
                      <td>{{ demande.etudiant.cne }}</td>
                      <td>{{ demande.etudiant.nom }}</td>
                      <td>{{ demande.etudiant.prenom }}</td>
                      <td>{{ demande.typeDemande.libelle }}</td>
                      <td class="table-action">
                        <a href="{{ path( 'traiterdemande', { id: demande.id } ) }}" class="btn btn-success" id="growl-primary">Traiter</a>
                      </td>
                    </tr>              

            {% endfor %}
            </tbody>
          </table>
          </div><!-- table-responsive -->  
              
          </div>
        </div><!-- panel-body -->
                       </div><!-- panel -->
          </form>     
        </div>
  {% endblock %}
        
{% block javascripts %}
   {{ parent() }}               
  <script>
    jQuery(document).ready(function() {
      jQuery('#list-type').dataTable({
        "sPaginationType": "full_numbers"
      });
    
        // Chosen Select
    jQuery("select").chosen({
      'min-width': '100px',
      'white-space': 'nowrap',
      disable_search_threshold: 10
    });
    
    // Show aciton upon row hover
    jQuery('.table-hidaction tbody tr').hover(function(){
      jQuery(this).find('.table-action-hide a').animate({opacity: 1});
    },function(){
      jQuery(this).find('.table-action-hide a').animate({opacity: 0});
    });
    });
    jQuery(document).ready(function(){
      
      // Date Picker

        jQuery('#datepicker').datepicker({ dateFormat: "dd-mm-yy" });
         
      });
  </script>          
{% endblock %}
